{
  "include": ["*.ts", "*.js", "tests/**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "types": ["node"]
  }
}
